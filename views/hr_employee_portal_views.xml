<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Employee Portal Configuration Views -->
    <record id="hr_employee_portal_form_view" model="ir.ui.view">
        <field name="name">hr.employee.portal.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add Portal Access Button to Button Box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_enable_portal_access"
                        string="Enable Portal"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-user-plus"
                        invisible="portal_access_enabled or not work_email"
                        groups="hr.group_hr_user">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Enable Portal</span>
                    </div>
                </button>

                <button name="action_open_portal_dashboard"
                        string="Portal Dashboard"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-dashboard"
                        invisible="not portal_access_enabled"
                        groups="hr.group_hr_user">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Portal Dashboard</span>
                    </div>
                </button>

                <button name="action_send_portal_invitation"
                        string="Send Invitation"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-envelope"
                        invisible="not portal_access_enabled"
                        groups="hr.group_hr_user">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Send Invitation</span>
                    </div>
                </button>
            </xpath>

            <!-- Add Portal Access Tab -->
            <xpath expr="//page[@name='personal_information']" position="after">
                <page string="Portal Access" name="portal_access" invisible="not portal_access_enabled">
                    <group>
                        <group string="Portal Configuration">
                            <field name="portal_access_enabled" readonly="1"/>
                            <field name="portal_notification_email"/>
                            <field name="last_portal_login" readonly="1"/>
                            <field name="user_id" readonly="1" string="Portal User"/>
                        </group>
                        <group string="Portal Actions">
                            <button name="action_disable_portal_access"
                                    string="Disable Portal Access"
                                    type="object"
                                    class="btn-warning"
                                    confirm="Are you sure you want to disable portal access for this employee?"
                                    groups="hr.group_hr_user"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Portal Access Configuration Action -->
    <record id="hr_employee_portal_action" model="ir.actions.act_window">
        <field name="name">Portal Access Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_portal_enabled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No employees found!
            </p>
            <p>
                Configure portal access for employees. Employees need a work email to access the portal.
                You can enable/disable portal access here.
            </p>
        </field>
    </record>

    <!-- Employee Search View with Portal Filter -->
    <record id="hr_employee_portal_search_view" model="ir.ui.view">
        <field name="name">hr.employee.portal.search</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <filter name="newly_hired" position="after">
                <separator/>
                <filter string="Portal Enabled" name="portal_enabled" domain="[('portal_access_enabled', '=', True)]"/>
                <filter string="Portal Disabled" name="portal_disabled" domain="[('portal_access_enabled', '=', False)]"/>
                <filter string="Has Email" name="has_email" domain="[('work_email', '!=', False)]"/>
            </filter>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="employee_portal_menu_root"
              name="Employee Portal"
              parent="hr.menu_hr_root"
              sequence="100"/>

    <menuitem id="employee_portal_config_menu"
              name="Portal Configuration"
              parent="employee_portal_menu_root"
              action="hr_employee_portal_action"
              sequence="10"/>
</odoo>
